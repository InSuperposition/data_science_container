// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/python
{
	"build": {
		"dockerfile": "./Containerfile",
		"context": ".",
		"args": {
			"USERNAME": "${localEnv:USER:data_science}",
			"USER_UID": "${localEnv:UID:1000}",
			"USER_GID": "${localEnv:GID:1000}"
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"charliermarsh.ruff",
				"-dbaeumer.vscode-eslint",
				"github.vscode-pull-request-github",
				"gxl.git-graph-3",
				"-ms-python.autopep8",
				"mechatroner.rainbow-csv",
				"ms-python.debugpy",
				"ms-python.vscode-pylance",
				"ms-toolsai.jupyter",
				"ms-toolsai.python-ds-extension-pack",
				"ms-toolsai.vscode-jupyter-powertoys",
				"tamasfe.even-better-toml"
			],
			"settings": {
				"[python]": {
					"editor": {
						"codeActionsOnSave": {
							"source.fixAll.ruff": "explicit",
							"source.organizeImports": "explicit"
						}
					}
				},
				"editor": {
					"formatOnSave": true,
					"renderWhitespace": "all"
				},
				"jupyter": {
					"interactiveWindow.textEditor.executeSelection": true
				}
			}
		}
	},
	"name": "Python 3",
	"remoteUser": "${localEnv:USER:data_science}",
	"mounts": [
		"source=${localWorkspaceFolder}/.devcontainer/.file/.zshenv,target=/home/${localEnv:USER:data_science}/.zshenv,type=bind,consistency=cached",
		"source=${localWorkspaceFolder}/.devcontainer/.file/.config/mise,target=/home/${localEnv:USER:data_science}/.config/mise,type=bind,consistency=cached",
		"source=${localWorkspaceFolder}/.devcontainer/.file/.config/starship,target=/home/${localEnv:USER:data_science}/.config/starship,type=bind,consistency=cached",
		"source=${localWorkspaceFolder}/.devcontainer/.file/.config/uv,target=/home/${localEnv:USER:data_science}/.config/uv,type=bind,consistency=cached",
		"source=${localWorkspaceFolder}/.devcontainer/.file/.config/zsh,target=/home/${localEnv:USER:data_science}/.config/zsh,type=bind,consistency=cached"
	]
}